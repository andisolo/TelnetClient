<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:gravity="bottom"
        android:id="@+id/item_for_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="10dp"
            android:gravity="bottom"
            android:id="@+id/item_for_manufacturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="10dp"
            android:gravity="bottom"
            android:id="@+id/item_for_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="bottom|right"
            android:id="@+id/item_for_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:background="#323232"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="bottom|right"
            android:id="@+id/item_for_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="bottom"
            android:layout_weight="1"
            android:id="@+id/item_for_bras_ip"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="bottom"
            android:layout_weight="1"
            android:id="@+id/item_for_bras_port"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="#3E86A0"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>